<h2>一覧ページ</h2>
<div>
  <% if @quizzes.present? %>
    <% @quizzes.each do |quiz| %>
      <div>
        <th>No.<%= quiz.id %></th>
        <%= link_to quiz_path(quiz.id) do %>
        <th>『<%= quiz.quiz_name %>』</th>
        <% end %>
        <th>出題者:<%= quiz.user.nickname %></th>
      </div>
    <% end %>
  <% else %>
    <p>出題がありません</p>
  <% end %>
</div>
<div>
  <%= link_to 'トップページへ戻る',root_path %>
</div>